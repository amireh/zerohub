{
  "env": {
    "browser": true,
    "mocha": true,
    "node": true
  },

  "plugins": [ "react" ],

  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true,
      "modules": false,
    }
  },

  "rules": {
    "no-undef": 2,
    "no-unused-vars": 2,
    "no-shadow": 2,

    "react/jsx-uses-react": 2,
    "react/jsx-no-undef": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2,
    "react/prop-types": 0,
  },

  "globals": {
    "Promise": false,
    "electronRequire": false,
    "I18n": false
  }
}